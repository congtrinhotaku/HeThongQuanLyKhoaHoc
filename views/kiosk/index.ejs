<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Kiosk Điểm Danh</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white text-center m-0">

  <!-- Camera -->
  <video id="camera" class="w-100 vh-100 object-fit-cover" autoplay playsinline></video>

  <!-- Nút chụp hình -->
  <button 
    class="btn bg-danger text-white rounded-circle shadow d-flex align-items-center justify-content-center position-fixed bottom-0 start-50 translate-middle-x mb-3"
    style="width:80px; height:80px; font-size:32px;"
    id="captureBtn">
    <i class="fa-solid fa-camera"></i>
  </button>

  <!-- Hộp kết quả -->
  <div id="info" class="position-fixed bottom-0 start-50 translate-middle-x mb-2 px-4 py-3 text-dark rounded bg-light d-none" style="min-width:400px;">

    <!-- nút đóng -->
    <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Đóng" id="closeInfo"></button>

    <!-- Loader -->
    <div id="loading" class="text-center d-none">
      <h5 class="text-warning fw-bold">Đang kiểm tra...</h5>
      <div class="spinner-border text-warning mt-2" role="status"></div>
    </div>

    <!-- Thành công -->
    <div id="result-success" class="d-none">
      <h2 class="fw-bold text-success">✅ Xác nhận đăng nhập</h2>
      <p>Xin chào <span class="text-warning" id="empName"></span></p>
      <p>Mã nhân viên/học viên: <span class="text-warning" id="empCode"></span></p>
      <div id="empImageBox" class="mb-2"></div>
      <button id="confirmBtn" class="btn btn-success w-100">Xác nhận thông tin</button>
      <div id="confirmMessage" class="mt-2 fw-bold"></div>
      <input type="hidden" id="employeeId">
    </div>

    <!-- Không tìm thấy nhân viên -->
    <div id="result-notfound" class="d-none text-center">
      <h4 class="text-danger fw-bold">❌ Không tìm thấy thông tin nhân viên</h4>
      <p>Vui lòng thử lại</p>
    </div>

    <!-- Không quét được khuôn mặt -->
    <div id="result-noface" class="d-none text-center">
      <h4 class="text-danger fw-bold">❌ Không quét được khuôn mặt</h4>
      <p>Vui lòng đứng thẳng trước camera</p>
    </div>

    <!-- Lỗi hệ thống -->
    <div id="result-error" class="d-none text-center">
      <h4 class="text-danger fw-bold">⚠️ Lỗi hệ thống</h4>
      <p>Vui lòng liên hệ quản trị viên</p>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Bật camera
    const video = document.getElementById("camera");
    navigator.mediaDevices.getUserMedia({ video: true })
      .then(stream => { video.srcObject = stream; })
      .catch(err => { console.error("Lỗi camera:", err); });

    const captureBtn = document.getElementById("captureBtn");
    const infoBox = document.getElementById("info");
    const closeInfo = document.getElementById("closeInfo");
    const loading = document.getElementById("loading");

    const resultSuccess = document.getElementById("result-success");
    const resultNotFound = document.getElementById("result-notfound");
    const resultNoFace = document.getElementById("result-noface");
    const resultError = document.getElementById("result-error");

    const empName = document.getElementById("empName");
    const empCode = document.getElementById("empCode");
    const employeeId = document.getElementById("employeeId");
    const empImageBox = document.getElementById("empImageBox");
    const confirmBtn = document.getElementById("confirmBtn");
    const confirmMessage = document.getElementById("confirmMessage");

    // nút đóng
    closeInfo.addEventListener("click", () => {
      infoBox.classList.add("d-none");
    });

    captureBtn.addEventListener("click", async () => {
      // reset UI
      infoBox.classList.remove("d-none");
      loading.classList.remove("d-none");
      resultSuccess.classList.add("d-none");
      resultNotFound.classList.add("d-none");
      resultNoFace.classList.add("d-none");
      resultError.classList.add("d-none");
      confirmMessage.innerHTML = "";

      // chụp frame từ video
      const canvas = document.createElement("canvas");
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;
      canvas.getContext("2d").drawImage(video, 0, 0);

      // gửi ảnh lên server
      canvas.toBlob(async (blob) => {
        const formData = new FormData();
        formData.append("face", blob, "capture.png");

        try {
          const res = await fetch("/kiosk/diemdanh", { method: "POST", body: formData });
          const json = await res.json();
          console.log("diemdanh:", json);

          loading.classList.add("d-none");

          if (json.success && json.type === "matched") {
            empName.innerText = json.name;
            empCode.innerText = json.code;
            employeeId.value = json._id;
            empImageBox.innerHTML = json.image ? `<img src="${json.image}" class="img-fluid rounded" width="120">` : "";
            resultSuccess.classList.remove("d-none");
          } else if (json.type === "notfound") {
            resultNotFound.classList.remove("d-none");
          } else if (json.type === "noface") {
            resultNoFace.classList.remove("d-none");
          } else {
            resultError.classList.remove("d-none");
          }
        } catch (err) {
          console.error("❌ Lỗi fetch:", err);
          loading.classList.add("d-none");
          resultError.classList.remove("d-none");
        }
      }, "image/png");
    });

    // xác nhận điểm danh
    confirmBtn.addEventListener("click", async () => {
      confirmMessage.innerHTML = `<span class="text-warning">⏳ Đang lưu điểm danh...</span>`;

      try {
        const res = await fetch("/kiosk/confirm", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ employeeId: employeeId.value })
        });
        const json = await res.json();
        console.log("confirm:", json);

        if (json.success) {
          confirmMessage.innerHTML = `<span class="text-success">✅ ${json.message}</span>`;
        } else {
          confirmMessage.innerHTML = `<span class="text-danger">❌ ${json.message}</span>`;
        }
      } catch (err) {
        console.error("❌ Lỗi xác nhận:", err);
        confirmMessage.innerHTML = `<span class="text-danger">⚠️ Lỗi hệ thống</span>`;
      }
    });
  </script>
</body>
</html>
