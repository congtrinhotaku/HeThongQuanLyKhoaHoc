<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Điểm danh bằng khuôn mặt</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-black d-flex justify-content-center m-0">

  <div class="w-100" style="max-width:1200px;">
    <video id="camera" class="w-100 vh-100 object-fit-cover" autoplay playsinline></video>
  </div>

  <!-- Nút chụp hình -->
  <button 
    class="btn bg-danger text-white rounded-circle shadow d-flex align-items-center justify-content-center position-fixed bottom-0 start-50 translate-middle-x mb-3"
    style="width:80px; height:80px; font-size:32px;"
    id="captureBtn">
    <i class="fa-solid fa-camera"></i>
  </button>

  <!-- Div thông tin học viên -->
  <div id="info" class="position-fixed bottom-0 start-50 translate-middle-x mb-2 px-4 py-3 text-white rounded d-none bg-dark bg-opacity-75" style="min-width:400px;">
    
    <div id="loader" class="text-center d-none">
      <h4 class="text-warning fw-bold mb-2">Đang kiểm tra...</h4>
      <%- include("../partials/loader.ejs") %>
    </div>

    <div id="result" class="d-none text-center">
      <h4 class="fw-bold text-success mb-2">Xác nhận đăng nhập</h4>
      <p>Xin chào <span id="name" class="text-warning"></span></p>
      <p>Mã học viên/nhân viên: <span id="code" class="text-warning"></span></p>
      
      <!-- Form xác nhận điểm danh -->
      <form id="confirmForm" method="POST" action="/kiosk/confirm">
        <input type="hidden" name="hocVienId" id="hocVienId" value="">
        <button type="submit" class="btn btn-success w-100 mt-2">Xác nhận điểm danh</button>
      </form>
    </div>

  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    const video = document.getElementById("camera");
    const captureBtn = document.getElementById("captureBtn");
    const infoBox = document.getElementById("info");
    const loader = document.getElementById("loader");
    const resultBox = document.getElementById("result");
    const nameSpan = document.getElementById("name");
    const codeSpan = document.getElementById("code");
    const hocVienIdInput = document.getElementById("hocVienId");

    // Bật camera
    navigator.mediaDevices.getUserMedia({ video: true })
      .then(stream => { video.srcObject = stream; })
      .catch(err => { console.error("Lỗi camera:", err); });

    captureBtn.addEventListener("click", async () => {
      infoBox.classList.remove("d-none");
      loader.classList.remove("d-none");
      resultBox.classList.add("d-none");

      // Chụp ảnh từ video
      const canvas = document.createElement("canvas");
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;
      canvas.getContext("2d").drawImage(video, 0, 0, canvas.width, canvas.height);
      const blob = await new Promise(resolve => canvas.toBlob(resolve, "image/jpeg"));

      // Gửi ảnh lên server
      const formData = new FormData();
      formData.append("face", blob, "face.jpg");

      try {
        const res = await fetch("/kiosk/diemdanh", {
          method: "POST",
          body: formData
        });
        const data = await res.json();

        loader.classList.add("d-none");

        if(data.success) {
          nameSpan.textContent = data.hoTen;
          codeSpan.textContent = data._id; // hoặc data.code nếu có
          hocVienIdInput.value = data._id;
          resultBox.classList.remove("d-none");
        } else {
          alert(data.message || "Không nhận diện được học viên");
        }
      } catch(err) {
        loader.classList.add("d-none");
        console.error(err);
        alert("Lỗi hệ thống");
      }
    });
  </script>

</body>
</html>
