<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Quản lý Loại Khóa Học</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLoaiModal">
      <i class="bi bi-plus-circle"></i> Thêm loại
    </button>
  </div>

  <table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Tên loại</th>
        <th>Mô tả</th>
        <th class="text-center">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% DSLoai.forEach((loai, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= loai.tenLoai %></td>
          <td><%= loai.moTa || "-" %></td>
          <td class="text-center">
            <a href="/admin/loaikhoahoc/<%= loai._id %>" class="btn btn-sm btn-warning">
              <i class="bi bi-pencil-square"></i>
            </a>
            <form action="/admin/loaikhoahoc/delete/<%= loai._id %>" method="POST" class="d-inline"
                  onsubmit="return confirm('Bạn chắc chắn muốn xóa loại này?')">
              <button type="submit" class="btn btn-sm btn-danger">
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<!-- Modal thêm loại -->
<div class="modal fade" id="addLoaiModal" tabindex="-1">
  <div class="modal-dialog">
    <form action="/admin/loaikhoahoc/add" method="POST" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Thêm loại khóa học</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Tên loại</label>
          <input type="text" name="tenLoai" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Mô tả</label>
          <textarea name="moTa" class="form-control"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Thêm</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
      </div>
    </form>
  </div>
</div>
