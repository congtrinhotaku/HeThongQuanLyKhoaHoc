<div class="container mt-4">
<div class="d-flex justify-content-between align-items-center mt-4">
    <h3 class="mb-0">
        Chi tiết buổi: <%= buoi.lesson ? buoi.lesson.tenLesson : "Buổi học" %>
    </h3>
    <h3 class="mb-0">
        Sinh viên đã điểm danh: <strong>
            <%= daDiemDanh %>/<%= tongSo %>
        </strong>
    </h3>
</div>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>STT</th>
                <th>Họ tên</th>
                <th>SĐT</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            <% if (danhSach.length> 0) { %>
                <% danhSach.forEach((d, index)=> { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= d.hocVien ? d.hocVien.hoTen : "" %>
                        </td>
                        <td>
                            <%= d.hocVien ? d.hocVien.soDienThoai : "" %>
                        </td>
                        <td>
                            <%= d.trangThai %>
                        </td>


                    </tr>
                    <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">Chưa có học viên tham gia</td>
                            </tr>
                            <% } %>
        </tbody>
    </table>
</div>